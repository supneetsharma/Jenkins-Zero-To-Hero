pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    SONAR_URL     = 'http://20.63.16.147:9000'
    GIT_REPO_NAME = 'Jenkins-Zero-To-Hero'
    GIT_USER_NAME = 'supneetsharma'
  }

  stages {

    stage('Checkout') {
      steps {
        sh 'echo "Checkout stage started"'
        git branch: 'main',
            url: 'https://github.com/supneetsharma/Jenkins-Zero-To-Hero.git',
            credentialsId: 'git-credentials'
      }
    }

    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }

    stage('Static Code Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
          sh """
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && \
            mvn clean verify sonar:sonar \
              -Dsonar.projectKey=Project1 \
              -Dsonar.projectName='Project1' \
              -Dsonar.host.url=${SONAR_URL} \
              -Dsonar.token=$SONAR_TOKEN
          """
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        // Final image name: supneet/bootcampproject:<BUILD_NUMBER>
        // Stored in ACR as: supneet.azurecr.io/supneet/bootcampproject:<BUILD_NUMBER>
        DOCKER_IMAGE = "supneet.azurecr.io/supneet/bootcampproject:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh """
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .
          """
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withRegistry('https://supneet.azurecr.io', 'ACR') {
            dockerImage.push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'git-credentials', variable: 'GITHUB_TOKEN')]) {
          sh """
            git config user.email "supneet.sharma@example.com"
            git config user.name "Supneet Sharma"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
            git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"

            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
          """
        }
      }
    }
  }
}
