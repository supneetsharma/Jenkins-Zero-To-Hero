pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      // Run as root and mount host Docker socket so we can docker build/push
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  environment {
    // ***** SONAR CONFIG *****
    SONAR_URL          = 'http://20.63.16.147:9000'
    SONAR_PROJECT_KEY  = 'Project1'
    SONAR_PROJECT_NAME = 'Project1'

    // ***** ACR CONFIG *****
    ACR_REGISTRY   = 'supneet.azurecr.io'
    ACR_REPOSITORY = 'supneet/bootcampproject'

    // ***** GIT CONFIG *****
    GIT_REPO_NAME = 'Jenkins-Zero-To-Hero'
    GIT_USER_NAME = 'supneetsharma'
  }

  stages {

    stage('Setup JDK 17') {
      steps {
        // Install and switch to Java 17 inside the agent container
        sh '''
          echo "=== Before install, java -version ==="
          java -version || echo "java not found or not set"

          echo "=== Installing OpenJDK 17 ==="
          apt-get update -y
          apt-get install -y openjdk-17-jdk

          echo "=== Available java alternatives ==="
          update-alternatives --list java || echo "no alternatives"
        '''

        script {
          // Detect JAVA_HOME for Java 17 dynamically (avoid Groovy $ interpolation)
          def javaHome = sh(
            returnStdout: true,
            script: '''JAVA_BIN=$(update-alternatives --list java | grep "java-17" | head -1 || update-alternatives --list java | head -1); dirname $(dirname $JAVA_BIN)'''
          ).trim()

          echo "Detected JAVA_HOME for JDK 17: ${javaHome}"

          env.JAVA_HOME = javaHome
          env.PATH = "${javaHome}/bin:${env.PATH}"
        }

        sh '''
          echo "=== After setting JAVA_HOME, java -version ==="
          java -version
        '''
      }
    }

    stage('Checkout (verify)') {
      steps {
        echo "Source is already checked out by Jenkins job (Declarative: SCM). Showing workspace:"
        sh 'pwd && ls -R'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          echo "=== Java version in Build and Test stage ==="
          java -version

          cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      steps {
        // sonar-token is a Secret Text credential
        withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_TOKEN')]) {
          // Use plain bash string so secrets are not interpolated by Groovy
          sh '''#!/bin/bash
set -e

echo "=== Java version in Static Code Analysis stage ==="
java -version

cd java-maven-sonar-argocd-helm-k8s/spring-boot-app

mvn clean verify sonar:sonar \
  -Dsonar.projectKey=$SONAR_PROJECT_KEY \
  -Dsonar.projectName="$SONAR_PROJECT_NAME" \
  -Dsonar.host.url=$SONAR_URL \
  -Dsonar.token=$SONAR_TOKEN
'''
        }
      }
    }

    stage('Build and Push Docker Image') {
      steps {
        script {
          // Final image: supneet.azurecr.io/supneet/bootcampproject:<BUILD_NUMBER>
          def imageTag    = env.BUILD_NUMBER
          def dockerImage = "${env.ACR_REGISTRY}/${env.ACR_REPOSITORY}:${imageTag}"

          echo "Docker image to build: ${dockerImage}"

          // Check docker socket visibility inside container
          sh 'ls -l /var/run/docker.sock || echo "docker.sock not visible inside agent"'

          sh """
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${dockerImage} .
          """

          def img = docker.image(dockerImage)
          docker.withRegistry("https://${env.ACR_REGISTRY}", 'ACR') {
            img.push()
          }
        }
      }
    }

    stage('Update Deployment File & Push to GitHub') {
      steps {
        // Use GitHub PAT stored as a secret text with ID 'git-pat'
        withCredentials([string(credentialsId: 'git-pat', variable: 'GIT_PAT')]) {
          // Use plain bash script (no Groovy interpolation for secrets)
          sh '''#!/bin/bash
set -e

echo "=== Configuring Git identity ==="
git config user.email "supneet.sharma@example.com"
git config user.name "Supneet Sharma"

echo "=== Updating deployment manifest image tag ==="
sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" \
  java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

echo "=== Git status after change ==="
git status

echo "=== Commit changes (if any) ==="
git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml || true
git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"

echo "=== Setting remote URL with PAT (GitHub username, not email) ==="
git remote set-url origin https://supneetsharma:${GIT_PAT}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git

echo "=== Pushing to main ==="
git push origin HEAD:main
'''
        }
      }
    }
  }
}
